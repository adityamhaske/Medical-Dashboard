            </li>
        </ul>
    </div>
</nav>
    <div class="container">
    <h3 class="text-center mb-5">  REGISTRATION PORTAL PAGE </h3>
    <form action="/auth/register" method="POST">
    {{!-- sending values to auth/register  using method POST--}}
        <div class="form-group row">
            <label class="col-12 col-sm-4" for="name" >name</label>
            <input class="form-control col-12 col-sm-6" type="text" name="name" id="name">
            <small></small>
        </div>
         <div class="form-group row">
             <label class="col-12 col-sm-4" for="email">email</label>
            <input  class="form-control col-12 col-sm-6" type="email" name="email" id="email">
            <small></small> 
        </div>
         <div class="form-group row">
             <label class="col-12 col-sm-4" for="password">password</label>
            <input  class="form-control col-12 col-sm-6" type="password" name="password" id="password">
            <small></small>
        </div>

        <div class="form-group row">
             <label class="col-12 col-sm-4" for="passwordconfirm">password confirm</label>
            <input class="form-control col-12 col-sm-6" type="password" name="passwordconfirm" id="passwordconfirm">
            <small></small>
        </div>
       
       <button class="btn btn-primary" type="submit">submit</button>

       {{#if message}}
{{!-- if message from auth_controll --}}
        <h4 >ALERT:{{message}}  </h4>
        {{/if}}
    </form>
    </div>
</body>
</html>