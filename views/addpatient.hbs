<div class="container">
    <h1>REGISTRATION PAGE</h1>
    <form action="/auth/addpatient" method="POST">
        <!-- First name input -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">First Name</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <input id="first-name" class="form-control" style="width: 100%;" type="text" name="firstname" required="true" placeholder="Enter first name...">
            </div>
        </div>

        <!-- Last name input -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label" for="lastname">Last Name</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <input class="form-control" style="width: 100%;" type="text" name="lastname" id="lastname"  required="true" placeholder="Enter last name...">
            </div>
        </div>

        <!-- Hospital number input -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Disease</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <input class="form-control" style="width: 100%;" type="text" name="desc" required="true" placeholder="Description About Disease">
            </div>
        </div>

        <!-- Date of birth -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Date of birth</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <input class="form-control" style="width: 100%;" type="text" name="dateofbirth" required="true" placeholder="DD/MM/YYYY">
            </div>
        </div>



        <!-- Sex -->
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Sex</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-primary active" style="margin:0px;">
                        <input type="radio" name="sex" value="male"  autocomplete="off" checked>Male
                    </label>
                    <label class="btn btn-danger" style="margin:0px;">
                        <input type="radio" name="sex" value="female" autocomplete="off"> Female
                    </label>
                </div>
            </div>
        </div>

        {{!-- emergency status --}}
        <div class="form-group row">
            <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Emergency status</label>
            <div class="col-sm-9 col-md-9 col-lg-9">
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-primary active" style="margin:0px;">
                        <input  type="radio" name="cndn" value="Serious"  autocomplete="off" checked>Serious
                    </label>
                    <label class="btn btn-danger" style="margin:0px;">
                        <input  type="radio" name="cndn" value="Normal" autocomplete="off"> Normal
                    </label>
                </div>
            </div>
        </div>



        <table id="add-new-patient" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <!-- JavaScript works here! -->
        </table>
        <input class="btn btn-success" style="float:left;" type="Submit" name="Submit" value="Add patient">

        {{#if message}}
        {{!-- if message from auth_controll --}}
            <h4 >Message:{{message}}  </h4>
        {{/if}}
    </form>
</div>
</body>
